{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2021-02-01",
      "name": "skvnet",
      "location": "francecentral",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.0.0.0/16"
          ]
        },
        "subnets": [
          {
            "name": "sksubnet",
            "properties": {
              "addressPrefix": "10.0.1.0/24"
            }
          }
        ]
      },
      "resources": [
        {
          "type": "Microsoft.Network/virtualNetworks/subnets",
          "apiVersion": "2021-02-01",
          "name": "sksubnet",
          "dependsOn": [
            "[resourceId('Microsoft.Network/virtualNetworks', 'skvnet')]"
          ],
          "properties": {
            "addressPrefix": "10.0.1.0/24"
          }
        }
      ]
    },
    {
      "type": "Microsoft.Network/localNetworkGateways",
      "apiVersion": "2021-02-01",
      "name": "sklng",
      "location": "francecentral",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'skvnet/sksubnet')]"
      ],
      "properties": {
        "localNetworkAddressSpace": {
          "addressPrefixes": [
            "192.168.1.0/24"
          ]
        },
        "gatewayIpAddress": "203.0.113.1"
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworkGateways",
      "apiVersion": "2021-02-01",
      "name": "skvng",
      "location": "francecentral",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'skvnet/sksubnet')]",
        "[resourceId('Microsoft.Network/publicIpAddresses', 'skvpn')]",
        "[resourceId('Microsoft.Network/localNetworkGateways', 'sklng')]"
      ],
      "properties": {
        "vpnType": "RouteBased",
        "sku": {
          "name": "VpnGw1",
          "tier": "VpnGw1"
        },
        "activeActive": false,
        "ipConfigurations": [
          {
            "name": "skvng_IPConfig",
            "properties": {
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIpAddresses', 'skvpn')]"
              },
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'skvnet/sksubnet')]"
              }
            }
          }
        ],
        "gatewayType": "Vpn",
        "vpnGatewayGeneration": "Generation1",
        "bgpSettings": {
          "bgpEnabled": false
        },
        "enablePrivateIpAddress": false
      }
    },
    {
      "type": "Microsoft.Network/publicIpAddresses",
      "apiVersion": "2021-02-01",
      "name": "skvpn",
      "location": "francecentral",
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworkGatewayConnections",
      "apiVersion": "2021-02-01",
      "name": "skvgc",
      "location": "francecentral",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworkGateways', 'skvng')]",
        "[resourceId('Microsoft.Network/localNetworkGateways', 'sklng')]"
      ],
      "properties": {
        "virtualNetworkGateway1": {
          "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', 'skvng')]"
        },
        "localNetworkGateway2": {
          "id": "[resourceId('Microsoft.Network/localNetworkGateways', 'sklng')]"
        },
        "connectionType": "IPsec",
        "routingWeight": 1,
        "sharedKey": "MySharedKey123",
        "enableBgp": false,
        "usePolicyBasedTrafficSelectors": false,
        "ipsecPolicies": [
          {
            "saLifeTimeSeconds": 3600,
            "ipsecEncryption": "AES256",
            "ipsecIntegrity": "SHA256",
            "ikeEncryption": "AES256",
            "ikeIntegrity": "SHA256",
            "dhGroup": "DHGroup2",
            "pfsGroup": "PFS2"
          }
        ]
      }
    }
  ]
}